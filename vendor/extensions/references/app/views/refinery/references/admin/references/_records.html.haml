- if searching?
  %h2
    = t('results_for', :scope => 'refinery.admin.search', :query => params[:search])

.pagination_container
  - if @references.any?
    = render 'references'
  - else
    %p
      - unless searching?
        %strong= t('.no_items_yet')
      - else
        = t('no_results', :scope => 'refinery.admin.search')
